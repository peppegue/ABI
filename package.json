{
  "name": "abi",
  "version": "1.0.0",
  "description": "Analisi Business Intelligence",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:next\"",
    "dev:electron": "cross-env NODE_ENV=development tsc -p electron-src && electron .",
    "dev:next": "next dev",
    "build": "next build && tsc -p electron-src",
    "start": "next start",
    "lint": "next lint",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "next": "14.1.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.0"
  },
  "build": {
    "appId": "com.abi.app",
    "productName": "ABI",
    "mac": {
      "category": "public.app-category.business"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}

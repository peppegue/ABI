{
  "name": "abi",
  "version": "1.0.0",
  "description": "Analisi Business Intelligence",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev src/renderer --port 3001",
    "dev:electron": "wait-on tcp:3001 && cross-env NODE_ENV=development electron .",
    "build": "npm run clean && npm run build:next && npm run build:electron && npm run build:preload",
    "build:next": "next build src/renderer",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "start": "cross-env NODE_ENV=production electron .",
    "clean": "rimraf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@google/generative-ai": "^0.2.1",
    "@heroicons/react": "^2.2.0",
    "@mui/material": "^5.15.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/react-simple-maps": "^3.0.4",
    "@types/styled-components": "^5.1.34",
    "autoprefixer": "^10.4.18",
    "chart.js": "^4.4.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "next": "^14.1.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-simple-maps": "^3.0.0",
    "styled-components": "^6.1.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.34",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "global": "^4.4.0",
    "node-loader": "^2.1.0",
    "rimraf": "^5.0.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.abi.app",
    "productName": "ABI",
    "mac": {
      "category": "public.app-category.business"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
